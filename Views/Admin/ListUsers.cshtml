
@model IEnumerable<ApplicationUser>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{ ViewBag.Title = "لوحة التحكم";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row col-12">
    <div class="col-10">
        <h2 style="text-align:right">قائمة المستخدمين</h2>
</div>
</div>
<div class="row col-12">
    <div class="col-lg-12 mb-4">
        <div class="card border-secondary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-9">

                        @if (Model.Any())
                        {
            <table class="table table-striped table-bordered media-table" id="tbl" name="tbl" style="background-color:white">
                <thead>
                    <tr>
                        <th hidden>
                            الرقم
                        </th>
                        <th>
                            إسم المستخدم
                        </th>

                        <th>إدارة</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var account in Model)
                    {
    <tr>
        <td hidden>@account.Id</td>
        <td>
            @account.UserName
        </td>
        <td>

            <form method="post" asp-action="DeleteUser" asp-route-id="@account.Id">

                <a asp-action="EditUser" asp-controller="Admin"
                   asp-route-id="@account.Id" class="btn btn-info text-white" style="cursor:pointer">
                    تعديل
                </a>


                <button type="submit" class="btn btn-danger" onclick="return confirm('هل انت متأكد من حذف المستخدم؟ : @account.UserName')">
                    <span class="glyphicon glyphicon-trash">حذف</span>
                </button>
            </form>

            @*<a href="/Admin/EditUser/@account.Id" class="btn btn-sm btn-warning">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>*@
            @*<a href="#" class="btn btn-sm btn-danger js-delete" data-Area-id="@account.Id">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>*@

        </td>
    </tr>
       }
                </tbody>
            </table>}
        else
        {
<p><h4 style="text-align:center">لا توجد بيانات</h4></p>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
