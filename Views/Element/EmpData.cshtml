@model Template.Models.Soldier;
@{
    ViewData["Title"] = "بيانات الموظف";
}

<form asp-action="Search">
    <div class="row col-12">
        <div class="col-10">
            <h2 style="text-align:right">استرجاع بيانات الموظف</h2>
            <br />
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="EmployeeNo" class="control-label"></label>
        <input name="soldierNo" class="form-control" />

    </div>
    <div class="form-group">
        <input type="submit" value="بحث" class="btn btn-primary" />
    </div>

</form>

<form method="post">



    <div class="row g-3">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">الموظف</h6>
                </div>
                <div class="row col-12" style="margin-top:15px;margin-bottom:20px">
                    @*<div class="col-auto">
                        </div>*@

                    <div class="col-md-3">
                        <label asp-for="EmployeeNo"></label>
                        <input asp-for="EmployeeNo" class="form-control" readonly required />
                        <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EmpId"></label>
                        <input id='PositionName' asp-for="EmpId" class="form-control" required readonly />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EmployeeName"></label>
                        <div class="input-group-prepend">
                            <input asp-for="EmployeeName" class="form-control" required readonly />
                        </div>
                    </div>
                </div>

                <div class="row col-12" style="margin-top:15px;margin-bottom:20px">
                    <div class="col-md-3">
                        <label asp-for="EmployeeRank"></label>
                        <div class="input-group-prepend">
                            <input id='EmployeeRank' asp-for="EmployeeRank" class="form-control" required readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="UnitName"></label>
                        <div class="input-group-prepend">
                            <input id='UnitName' asp-for="UnitName" class="form-control" required readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="JobName"></label>
                        <div class="input-group-prepend">
                            <input id='JobName' asp-for="JobName" class="form-control" required readonly />
                        </div>
                    </div>

                </div>

                <div class="row col-12" style="margin-top:15px;margin-bottom:20px">
                    <div class="col-md-3">
                        <label asp-for="Region"></label>
                        <div class="input-group-prepend">
                            <input id='Region' asp-for="Region" class="form-control" required readonly />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="MobileNum"></label>
                        <div class="input-group-prepend">
                            <input id='MobileNum' asp-for="MobileNum" class="form-control" required readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
